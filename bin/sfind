#!/bin/sh
#
# sfind
#
# Finds code-like files at or below $1 whose names match the grep
# arguments in the rest of the args.
#

SCAN_ROOT="$1"
shift

THIS_DIR="$(dirname $0)"

if [ -z "$@" ]
then
    "$THIS_DIR"/sfind_heart "$SCAN_ROOT" | tr '\0' '\n'
else
    "$THIS_DIR"/sfind_heart "$SCAN_ROOT" | tr '\0' '\n' | grep "$@"
fi
