#!/bin/sh
#
# sfind
#
# Finds code-like files at or below $1 whose names match the grep
# arguments in the rest of the args.
#

SCAN_ROOT="$1"
shift
GREP_ARGS="$@"

if [[ -z "$GREP_ARGS" ]]; then
    sfind_heart "$SCAN_ROOT" | tr '\0' '\n'
else
    sfind_heart "$SCAN_ROOT" | tr '\0' '\n' | grep "$GREP_ARGS"
fi
