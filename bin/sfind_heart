#!/bin/bash
#
# sfind_heart

SCAN_ROOT="$1"
shift

if [ -z "$SCAN_ROOT" ]; then
    echo "no scan root"
    exit 1
fi
if [ ! -e "$SCAN_ROOT" ]; then
    echo "sfind_heart: $SCAN_ROOT: No such file or directory"
    exit 1
fi

find "$SCAN_ROOT" -type f \( -name '*file' -o -name 'README.*' -o -name '*.rb' -o -name '*.rake' -o -name '*.py' -o -name '*.php' -o -name '*.js' -o -name '*.sh' -o -name '*.bash' -o -name '*.csh' -o -name '*.tcsh' -o -name '*.ksh' -o -name '*.zsh' -o -name '*.xml' -o -name '*.yml' -o -name '*.yaml' -o -name '*.json' -o -name '*.txt' -o -name '*.md' -o -name '*.html' -o -name '*.css' -o -name '*.erb' -o -name '*.procfile' -o -name '*.properties' -o -name '*.conf' -o -name '*.config' -o -name '*.tcl' -o -name '*.sup' -o -name '*.c' -o -name '*.h' \) -print0

